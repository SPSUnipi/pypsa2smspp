{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run current file (cwd=file dir)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}/test",
      "console": "integratedTerminal"
      ,
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "Run module test.main (cwd=repo root)",
      "type": "python",
      "request": "launch",
      "module": "test.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}